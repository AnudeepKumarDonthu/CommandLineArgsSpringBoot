<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Pets::JSP+Servlet Web Application</display-name>

	<!-- Servlet declaration -->
	<servlet>
		<servlet-name>PetPeers</servlet-name>
		<servlet-class>com.org.action.PetPeersAction</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>PetPeersLogin</servlet-name>
		<servlet-class>com.org.action.PetPeersLoginAction</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>PetPeersSearch</servlet-name>
		<servlet-class>com.org.action.PetPeersSearchAction</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>PetPeersBuy</servlet-name>
		<servlet-class>com.org.action.PetPeerBuyAction</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>PetPeers</servlet-name>
		<url-pattern>/pets</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>PetPeersLogin</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>PetPeersSearch</servlet-name>
		<url-pattern>/searchPets</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>PetPeersBuy</servlet-name>
		<url-pattern>/buypet</url-pattern>
	</servlet-mapping>

</web-app>